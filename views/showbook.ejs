<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="showbook.css">
  <link rel="stylesheet" href="styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <title>Books from API</title>
  
</head>


</head>
<body>

    <%- include('partials/nav') %>

      <div class="container mt-4">
        <h1>My Saved Books</h1>
        <div class="d-flex flex-wrap justify-content-center">
          <% if (books && books.length > 0) { %>
            <% books.forEach(function(book) { %>
              <div class="card text-bg-dark">
                <img src="<%= book.cover_url %>" 
                     class="card-img" 
                     alt="<%= book.title %> Cover">
                <div class="card-img-overlay">
                  <h5 class="card-title"><%= book.title %></h5>
                  <p class="card-text">
                    <small>Author: <%= book.author %></small><br>
                    <small>Published Date: <%= book.published_date %></small><br>
                    <small>Notes: <%= book.notes %></small>
                    
                    <small>Rating:</small>
                    <div class="rating">
                      <% for (let i = 1; i <= 5; i++) { %>
                        <span class="star <%= i <= book.rating ? 'active' : '' %>">
                          <%= i <= book.rating ? '★' : '☆' %>
                        </span>
                      <% } %>
                    </div>
                    
                  </p>
                  <!-- Edit and Delete Buttons -->
                  <div class="crud-buttons">
                    <a href="/editbook/<%= book.id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/deletebook/<%= book.id %>" method="post" style="display:inline;" onsubmit="return confirmDelete(event)">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No saved books found.</p>
          <% } %>
        </div>
        <div class="mt-4 text-center">
          <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
      </div>
    
  
  



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
<script src="js/alert.js"></script>
</body>
</html>